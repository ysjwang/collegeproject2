<div class="container">
	<div id="content">
		<h2 style="clear:right; float:right"><%= @cbo.name %></h2>

		<div class="column-left">


			<br /><br />
			<ul class="profile-facts">
				<li class="my-name">
					<%= @cbo.name %>

					<% if current_cbo == @cbo %>
					<%= link_to "[Edit]", edit_cbo_path(@cbo) %>
					<% end %>

				</li>
				<li class="my-tag"><%= @cbo.category_list.map{|category| category}.join(", ") %></li>

				<br />
				<li><%= image_tag @cbo.logo_image(:thumb) %></li>
				<strong>Address</strong>
				<li><%= @cbo.address1 %></li>
				<li><%= @cbo.address2 %></li>
				<li><%= @cbo.city %>, <%= @cbo.state %></li>
				<li><%= @cbo.zip %></li>


			</ul>

			
		</div>

		<div class="column-right">


			<center>
				<div class="slides_container">
					<div id="slides">
						<%= image_tag @cbo.logo_image(:medium) %>

						<%= image_tag @cbo.image1(:medium) %>
						<%= image_tag(@cbo.image2(:medium)) if !@cbo.image3.blank? %>
						<%= image_tag(@cbo.image3(:medium)) if !@cbo.image3.blank?  %>
						<%= image_tag(@cbo.image4(:medium)) if !@cbo.image4.blank?  %>
						<%= image_tag(@cbo.image5(:medium)) if !@cbo.image5.blank?  %>

					</div>
				</div>
			</center>

			<br />


			<% if !@cbo.description.blank? %>
			<div class="cbo-summary">

				<h3>Summary</h3>
				<%= simple_format(@cbo.description) %>
			</div>
			<hr /><br />
			<% end %>


			<% if @cbo.testimonies.count > 0 %>
			<div class="cbo-testimonies">

				<h3>Testimonies</h3>
				<% @cbo.testimonies.each do |testimony| %>

				<em>"<%= testimony.title %>" - <%= testimony.author %></em>
				<%= simple_format(testimony.content) %>
				<br />
				<% end %>
			</div>
			<hr /><br />
			<% end %>


			<% if !@cbo.team_info.blank? %>
			<div class="cbo-team">
				<h3>Team</h3>
				<%= simple_format(@cbo.team_info) %>
			</div>
			<hr /><br />
			<% end %>

			<% if @related_cbos.count > 0 %>
			<div class="cbo-interested">
				<h3>You May Also Be Interested In...</h3>
				<ul>
					<% @related_cbos.each do |cbo| %>
					<li><%= link_to cbo.name, cbo %> (<%= cbo.city %>)</li>
					<% end %>
				</ul>
			</div>
			<% end %>
			


			<!--
			<p>
			Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
			</p>
			!-->
		</div>




		<div class="push"></div>



	</div>
</div>


